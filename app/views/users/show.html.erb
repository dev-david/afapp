<% provide(:title, @user.user_name) %>
<div class="row-fluid">
	<aside class="span4">
		<section>
			<h1>
				<%= link_to image_tag(@user.avatar.url(:thumb), :class => "avatar"), @user.avatar.url %>
				<%= @user.user_name %>
			</h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
	    </section>
		<%= render 'follow_form' if signed_in? %>
		<section>
			<%= render 'shared/recent_activity', :locals => { :activities => recent_activity } %>
		</section>
	</aside>
	<div class="span8 david_trends_bg">
		<h3><%= @user.user_name %>'s Posts (<%= @user.microposts.count %>)</h3>
		<% if @user.microposts.any? %>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>