<% provide(:title, 'Sign up') %>

  <div class="span4">
    <div class="david_unit">
        <h3><%= link_to "Asia Fan", root_path %> -Sign up</h3>
        <%= form_for @user, :url => users_path, :html => { :multipart => true } do |f| %>
      
      	
            <%= f.label :user_name %>
            <%= f.text_field :user_name %>

            <%= f.label :first_name %>
            <%= f.text_field :first_name %>

    		<%= f.label :last_name %>
            <%= f.text_field :last_name %>

            <%= f.label :email %>
            <%= f.text_field :email %>

            <%= f.label :password %>
            <%= f.password_field :password %>

            <%= f.label :password_confirmation, "Password Confirmation" %>
            <%= f.password_field :password_confirmation %>

            <%= f.label :avatar, "Select an avatar" %>
            <%= f.file_field :avatar %>

            <%= f.label :avatar_url, "or select avatar from URL" %>
            <%= f.text_field :avatar_remote_url, placeholder: 'image url... http://...' %>

            <%= f.submit "Create my account", class: "btn btn-large submit_button" %>
            <%= link_to "Main Page", root_path, class: "btn btn-large submit_button_red"%>
    </div>
  </div>
    <div class="span4">
            <br>
            <%= render 'shared/error_messages', object: f.object %>
            <% end %>
    </div>