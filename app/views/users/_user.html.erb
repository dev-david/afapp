<li>
  <%= link_to image_tag(user.avatar.url(:thumb), :class => 'avatar_list'), user %>
  <%= link_to user.user_name, user %>
  <% if user.quote %>
	<span>
		- <%= user.quote %> 
	</span>
	<% end %>
  <% if current_user.admin? && !current_user?(user) %>
    | 
     <%= user.first_name + ' ' + user.last_name %> |
     <%= user.email %> |
     Joined: <%= user.created_at %> |

    <%= link_to "Delete", user, method: :delete,
								  class: 'david_red',
                                  data: { confirm: "You sure you want to delete #{user.user_name}?" } %>
  <% end %>
</li>