<h1><i class="icon-tag icon-large"></i> Trending tags</h1>
<div id="tag_cloud">
  <% tag_cloud Micropost.tag_counts.limit(7), %w{s m l} do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
  <% tag_cloud Comment.tag_counts.limit(7), %w{s m l} do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>
<h1>Recent Activity</h1>

<% @activities.each do |activity| %>
		<%= render_activity activity %>
<% end %>