<li class="content_list" id="<%= feed_item.id %>">
	<div>
		<%= link_to image_tag(feed_item.user.avatar.url(:thumb),:class => "avatar"), feed_item.user %>
	</div>
	<div class="bubble">
		<span class="user">
			<%= link_to feed_item.user.user_name, feed_item.user %>
		</span>
		<div class="content_feed_post">
			<% if !feed_item.tag_list.blank? %>
				<div class="tag">
					<i class="icon-tag"></i> <%= raw feed_item.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
				</div>
			<% end %>
			<span class="feed_item_content"><%= simple_format(feed_item.content) %></span>
			<% if feed_item.post_image_file_name %>
				<div class="post_image_thumb"><%= link_to image_tag(feed_item.post_image.url(:medium)), feed_item.post_image.url, {:class => 'fancybox'} %></div>
			<% end %>
			<% if feed_item.video.present? %>
				<div class="youtubevideo"><%= raw(youtube_embed(feed_item.video)) %></div>
			<% end %>
			<div class="timestamp"> 
				Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
				<!-- ***** FORM FOR LIKE / THUMBS UP ***** -->
				<%= form_for Like.new, :html => { :class => "button_like", :multipart => true } do |l| %>
					<%= l.hidden_field :user_id, :value => current_user.id %>
					<%= l.hidden_field :micropost_id, :value => feed_item.id %>
					<button type="submit" class="button_like"><i class="icon-heart icon-large"></i> <%= feed_item.likes.count%></button>
				<% end %>
			</div>
			<% if current_user?(feed_item.user) or current_user.admin? %>
				<div>
					<%= link_to "Delete", feed_item, method: :delete,
								                     class: 'david_red',
								                     data: { confirm: "You sure you want to delete this post by #{feed_item.user.user_name}?" },
								                     title: feed_item.content %>
				</div>
			<% end %>
		</div>
	</div>
	<div class="clear"></div>	
	<!-- ***** SHOW COMMENTS FOR FEED ITEM ***** -->
	<div class="content_feed_post_comment">
		<% feed_item.comments.order("created_at desc").each do |comment| %>
			<span>
				<%= link_to image_tag(comment.user.avatar.url(:tiny),:class => "avatar_comment"), comment.user %>
			</span>
			<div class="bubble_comment">
				<div class="comment_user"><%= link_to comment.user.user_name, comment.user%></div>
				<% if !comment.tag_list.blank? %>
					<div class="tag">
						<i class="icon-tag"></i> <%= raw comment.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
					</div>
				<% end %>
				<%= simple_format(comment.content) %>
				<% if !comment.comment_image_file_name.blank?%>
					<br><%= link_to image_tag(comment.comment_image.url(:medium)), comment.comment_image.url, {:class => 'fancybox'} %><br/>
				<% end %>
				<div class="timestamp">Posted <%= time_ago_in_words(comment.created_at)%> ago. 
					<!-- ***** FORM FOR LIKE / THUMBS UP ***** -->
					<%= form_for Like.new, :html => { :class => "button_like", :multipart => true } do |l| %>
						<%= l.hidden_field :user_id, :value => current_user.id %>
						<%= l.hidden_field :comment_id, :value => comment.id %>
						<button type="submit" class="button_like"><i class="icon-heart icon-large"></i> <%= comment.likes.count %></button>
					<% end %>
					<% if current_user?(comment.user) or current_user.admin? %>
						<div>
							<%= link_to "Delete", comment, method: :delete,
										                     class: 'david_red',
										                     data: { confirm: "You sure you want to delete this comment by #{feed_item.user.user_name}?" },
										                     title: comment.content %>
						</div>
					<% end %>
				</div>
			</div> <!-- end bubble_comment -->
			
		<div class="clear"></div>
		<% end %>
	</div>
	<div class="clear"></div>
	<!-- ******* FORM FOR COMMENTS ******* -->
	<button class="comment_button"><i class="icon-edit icon-3x"></i> <i class="icon-camera icon-3x"></i></button>
	<div class="comment_field">
		<%= form_for Comment.new, :html => { :multipart => true } do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<%= f.hidden_field :user_id, :value => current_user.id %>
		<%= f.hidden_field :micropost_id, :value => feed_item.id %>
		<div class="field">
			<div class="input-prepend">
				<span class="add-on"><i class="icon-tag"></i></span><%= f.text_field :tag_list, placeholder: "#tags, #2ne1, #bigbang etc..." %><%= f.label :tag_list, "Separate tags with commas" %>
			</div>
			<%= f.text_area :content, placeholder: "Comment on this..."%>
			<%= f.label :comment_image, "Upload a comment image" %>
			<i class="icon-camera icon-2x"></i>
			<%= f.file_field :comment_image %>
			<%= f.label :comment_image_remote_url, "or select from URL" %>
			<%= f.text_field :comment_image_remote_url, placeholder: 'image url... http://...' %>
			<%= f.submit "Comment", class: "btn btn-large submit_button" %>
			<button class="cancel_comment btn btn-large submit_button_red">Cancel</button>
		</div>
		<% end %>
	</div>
</li>
<div class="clear"></div>