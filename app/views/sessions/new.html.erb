<% provide(:title, "Sign in") %>
	<div class="span4">
		<div class="david_unit">
		<h3><%= link_to "Asia Fan", root_path %> - Sign in</h3>
			<%= form_for(:session, url: sessions_path) do |f| %>
				<%= f.label :email %>
				<%= f.text_field :email %>
				<%= f.label :password %>
				<%= f.password_field :password %>
				<%= link_to "Forgotten password?", new_password_reset_path %>
				<br /><br />
				<%= f.submit "Sign in", class: "btn btn-large submit_button_purple" %>
	            <%= link_to "Main Page", root_path, class: "btn btn-large submit_button_red"%>
			<% end %>
			<p>New user? <%= link_to "Sign up now!", signup_path %></p>
		</div>
	</div>
